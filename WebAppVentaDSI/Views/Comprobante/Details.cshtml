@inject IAuthorizationService AuthorizationService



<h1>Detalle - Datos</h1>

<div>
    <h4>Comprobante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdComprobante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoComprobante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEmisionComprobante)
