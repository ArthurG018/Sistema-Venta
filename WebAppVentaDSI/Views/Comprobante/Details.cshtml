        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NombresCompletos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoComprobante.NombreTipoComprobante)
        </dt>
